<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/search_history_record"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:text="@string/search_histroy"
        android:textColor="@color/send_qb_gray"
        android:textSize="14dp" >
    </TextView>

    <com.gionee.client.view.widget.FlowLayout
        android:id="@+id/search_history_flow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp" >
    </com.gionee.client.view.widget.FlowLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/list_select" />

    <TextView
        android:id="@+id/clear_history_record"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:drawableLeft="@drawable/clear_history_btn"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/clear_history"
        android:textColor="@drawable/search_keywords_text_src"
        android:textSize="14dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:background="@drawable/dialog_gray" />

</LinearLayout>