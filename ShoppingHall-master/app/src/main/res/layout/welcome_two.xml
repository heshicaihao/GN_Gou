<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bg" >

    <Button
        android:id="@+id/third_open_app"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dip"
        android:background="@drawable/open_comments_btn"
        android:onClick="onClick"
        android:paddingBottom="5dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:text="@string/go_comments"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/welcome_title"
        android:layout_width="@dimen/welcome_title_width"
        android:layout_height="@dimen/welcome_title_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/welcome_title_margintop"
        android:src="@drawable/welcome_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/third_open_app"
        android:layout_marginBottom="@dimen/welcome_mid_container_marginbottom"
        android:layout_below="@id/welcome_title" >

        <ImageView
            android:id="@+id/welcome_bot"
            android:layout_width="@dimen/welcome_bot_width"
            android:layout_height="@dimen/welcome_bot_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/welcome_bot" 
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/welcome_mid"
            android:layout_width="@dimen/welcome_mid_width"
            android:layout_height="@dimen/welcome_mid_height"
            android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="60dip"
            android:src="@drawable/welcome_mid" />

        <ImageView
            android:id="@+id/baby"
            android:layout_width="@dimen/baby_width"
            android:layout_height="@dimen/baby_height"
            android:layout_alignBottom="@+id/welcome_mid"
            android:layout_alignRight="@+id/welcome_mid"
            android:src="@drawable/baby" />
    </RelativeLayout>

</RelativeLayout>