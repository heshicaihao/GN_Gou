<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef" >

    <ProgressBar
        android:id="@+id/progress_horizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:max="100"
        android:progressDrawable="@drawable/progressbarcolor" />

    <ImageView
        android:id="@+id/submitting_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:contentDescription="@null"
        android:src="@drawable/submitting" />

    <TextView
        android:id="@+id/hot_order_note1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/submitting_icon"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/hot_order_note1"
        android:textColor="#666666"
        android:textSize="18dp" />

    <Button
        android:id="@+id/goto_cutprice_order"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/hot_order_note1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/goto_cut_order_btn"
        android:onClick="onClick"
        android:text="@string/goto_cutprice_order"
        android:textColor="#666666"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/hot_order_note2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goto_cutprice_order"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="7dp"
        android:text="@string/hot_order_note2"
        android:textColor="#B7B7B7"
        android:textSize="15dp" />

</RelativeLayout>