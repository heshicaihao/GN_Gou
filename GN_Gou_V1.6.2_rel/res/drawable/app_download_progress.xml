<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="#e0dfdf"
                android:centerY="0.5"
                android:endColor="#e0dfdf"
                android:startColor="#e0dfdf" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#ff9000"
                    android:centerY="0.75"
                    android:endColor="#ff9000"
                    android:startColor="#ff9000" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#ff9000"
                    android:centerY="0.75"
                    android:endColor="#ff9000"
                    android:startColor="#ff9000" />
            </shape>
        </clip>
    </item>

</layer-list>
