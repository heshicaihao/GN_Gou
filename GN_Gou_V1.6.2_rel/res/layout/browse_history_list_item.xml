<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/browse_history_list_item_bg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dip" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/divide" >

            <TextView
                android:id="@+id/history_type"
                android:layout_width="37dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/platform_label_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/goods"
                android:textColor="#888888"
                android:textSize="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/history_type"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/history_type"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/history_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/history_title"
                android:layout_marginTop="6dip"
                android:singleLine="true"
                android:textColor="@color/comments_text_nor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/history_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dip"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/comments_text_nor"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/history_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:background="@drawable/titlebar_selector"
            android:focusable="false"
            android:scaleType="fitXY"
            android:src="@drawable/browse_history_delete" />

        <ImageView
            android:id="@+id/divide"
            android:layout_width="1px"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:layout_toLeftOf="@id/history_delete"
            android:background="#d1d1d1" />
    </RelativeLayout>

</RelativeLayout>