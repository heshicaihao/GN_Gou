<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/more_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/web_share"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/return_bg"
        android:clickable="true"
        android:drawableLeft="@drawable/more_share_btn"
        android:drawablePadding="14dp"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:paddingLeft="12dp"
        android:text="@string/share"
        android:textColor="@color/tab_text_color_nor"
        android:textSize="15dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/more_dividing_line" />

    <TextView
        android:id="@+id/web_copy"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/return_bg"
        android:clickable="true"
        android:drawableLeft="@drawable/more_copy_btn"
        android:drawablePadding="14dp"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:paddingLeft="12dp"
        android:text="@string/copy_link"
        android:textColor="@color/tab_text_color_nor"
        android:textSize="15dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/more_dividing_line" />

    <TextView
        android:id="@+id/web_help"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/return_bg"
        android:clickable="true"
        android:drawableLeft="@drawable/more_help_btn"
        android:drawablePadding="14dp"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:paddingLeft="12dp"
        android:text="@string/shopping_course"
        android:textColor="@color/tab_text_color_nor"
        android:textSize="15dp" 
        android:visibility="invisible"/>

</LinearLayout>