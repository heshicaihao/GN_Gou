<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical" >

    <Button
        android:id="@+id/action_btn"
        android:layout_width="288dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/umeng_fb_contact_info_btn"
        android:text="@string/have_a_look"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/above_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/action_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingBottom="@dimen/no_data_layout_padding_bottom"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <ImageView
            android:id="@+id/amigo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:src="@drawable/amigo_icon" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amigo_icon"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/favorite_shopping_no_data_msg"
            android:textColor="#cecece"
            android:textSize="@dimen/no_data_text_size" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/add_compare_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/above_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dip"
        android:scaleType="fitXY"
        android:src="@drawable/same_style_guide"
        android:visibility="gone" >
    </ImageView>

</RelativeLayout>