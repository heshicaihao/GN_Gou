<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/messges_list_divider">

    <LinearLayout
        android:layout_width="20dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dip"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock" />

        <LinearLayout
            android:id="@+id/ll_time_line"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@drawable/time_line" 
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:orientation="vertical" 
        android:layout_marginBottom="20dip">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/order_history_time"
            android:textSize="13dip" />

        <RelativeLayout
            android:id="@+id/rl_order_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/order_history_content_bg"
            android:minHeight="56dip"
            >

            <ImageView
                android:id="@+id/iv_order_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/order_arrow" 
                />

            <TextView
                android:id="@+id/tv_order_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_toLeftOf="@id/iv_order_arrow"
                android:gravity="center_vertical"
                android:paddingRight="2dip"
                android:paddingLeft="0dip"
                android:textColor="@color/order_history_content"
                android:textSize="16dip" 
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>