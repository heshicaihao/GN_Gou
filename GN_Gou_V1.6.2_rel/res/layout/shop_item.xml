<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/shop_logo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:background="@drawable/shop_default_bg"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shop_logo"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/shop_logo"
            android:ellipsize="end"
            android:gravity="top"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/shop_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/shop_logo"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/shop_logo"
            android:ellipsize="end"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="12dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_click_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@null"
        android:onClick="onClick"
        android:src="@drawable/return_bg" />

    <ImageView
        android:id="@+id/drop_down_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="32dp"
        android:padding="2dp"
        android:contentDescription="@null"
        android:src="@drawable/drop_down_img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_layout" >

        <RelativeLayout
            android:id="@+id/drop_down_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/favorite_drop_down_bg"
            android:visibility="gone" >

            <include layout="@layout/drop_down" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>