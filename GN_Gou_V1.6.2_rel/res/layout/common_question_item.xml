<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_item_bg"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/category_tabs_select_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="15dip"
        android:minHeight="57dip" 
        >

        <TextView
            android:id="@+id/common_question_item_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/posistion_bg"
            android:gravity="center"
            android:textColor="#888888"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/empty"
            android:src="@drawable/more_triangle" />

        <TextView
            android:id="@+id/common_question_item_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_toLeftOf="@id/iv_triangle"
            android:layout_toRightOf="@id/common_question_item_position"
            android:gravity="center_vertical"
            android:textColor="@drawable/category_tabs_text_color"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_color_divider_height"
            android:layout_alignParentBottom="true"
            android:background="@color/list_select" />
    </RelativeLayout>

</RelativeLayout>