<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/top_title_view"
        android:layout_width="fill_parent"
        android:layout_height="15dip"
        android:background="@drawable/title_bar_bk"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/top_menu_bar"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_alignParentTop="true"
        android:background="#fbfbfb" >

        <ImageView
            android:id="@+id/two_dimensional_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"
            android:background="@drawable/top_menu_bk"
            android:contentDescription="@drawable/menu_btn"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:src="@drawable/scanncer" />

        <TextView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="32dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toLeftOf="@id/two_dimensional_code"
            android:background="@drawable/search_bg"
            android:clickable="true"
            android:drawableLeft="@drawable/search_red_btn"
            android:drawablePadding="10dip"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/input_goods_name"
            android:paddingLeft="12dip"
            android:paddingRight="10dip"
            android:singleLine="true"
            android:textColor="#a9a9a9"
            android:textColorHint="#a9a9a9"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>